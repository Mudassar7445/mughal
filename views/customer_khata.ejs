<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Khata | Mughal Molding</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">

<nav class="navbar navbar-dark bg-dark mb-4">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="/">Mughal Molding</a>
        <a href="/" class="btn btn-secondary btn-sm">Back to Dashboard</a>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">‚ûï New Khata Entry</h5>
                </div>
                <div class="card-body">
                    <form action="/customer_khata" method="POST">
                        <div class="mb-2">
                            <label class="small fw-bold">Date</label>
                            <input type="date" name="entry_date" class="form-control" value="<%= new Date().toISOString().split('T')[0] %>" required>
                        </div>
                        <div class="mb-2">
                            <label class="small fw-bold">Customer Name</label>
                            <input type="text" name="customer_name" class="form-control" placeholder="Naam likhein" required>
                        </div>
                        <div class="mb-2">
                            <label class="small fw-bold">Phone</label>
                            <input type="text" name="customer_phone" class="form-control" placeholder="Mobile Number">
                        </div>
                        <div class="mb-2">
                            <label class="small fw-bold">Details (Samaan)</label>
                            <textarea name="khata_details" class="form-control" rows="2" placeholder="Kya samaan liya?"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-6 mb-2">
                                <label class="small fw-bold">Total Amount</label>
                                <input type="number" name="total_amount" class="form-control" placeholder="0">
                            </div>
                            <div class="col-6 mb-2">
                                <label class="small fw-bold">Paid (Wasool)</label>
                                <input type="number" name="paid_amount" class="form-control" placeholder="0">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success w-100 mt-2 fw-bold">Save Entry</button>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-3">
                <a href="/add_customer" class="btn btn-outline-primary w-100">Add New Customer (Opening Balance)</a>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">üìú Khata Register</h5>
                    <input type="text" id="searchBox" class="form-control form-control-sm w-50" placeholder="Search Name..." onkeyup="filterTable()">
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-striped table-hover mb-0" id="khataTable">
                            <thead class="table-dark sticky-top">
                                <tr>
                                    <th>Date</th>
                                    <th>Name/Phone</th>
                                    <th>Details</th>
                                    <th>Total</th>
                                    <th>Paid</th>
                                    <th>Balance</th>
                                    <th>Action</th> </tr>
                            </thead>
                            <tbody>
                                <% if (history.length > 0) { %>
                                    <% history.forEach(item => { %>
                                        <tr>
                                            <td class="small"><%= item.entry_date %></td>
                                            <td>
                                                <strong><%= item.customer_name %></strong><br>
                                                <small class="text-muted"><%= item.customer_phone %></small>
                                            </td>
                                            <td class="small"><%= item.khata_details %></td>
                                            <td class="text-primary fw-bold"><%= item.total_amount %></td>
                                            <td class="text-success fw-bold"><%= item.paid_amount %></td>
                                            <td class="text-danger fw-bold"><%= item.balance_amount %></td>
                                            <td>
                                                <a href="/delete_khata/<%= item.id %>" 
                                                   class="btn btn-sm btn-danger py-0 px-2"
                                                   onclick="return confirm('Delete kar du?');"
                                                   title="Delete Entry">
                                                    üóëÔ∏è
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-3">Abhi tak koi khata nahi hai.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function filterTable() {
        let input = document.getElementById("searchBox");
        let filter = input.value.toLowerCase();
        let table = document.getElementById("khataTable");
        let tr = table.getElementsByTagName("tr");

        for (let i = 1; i < tr.length; i++) {
            let td = tr[i].getElementsByTagName("td")[1]; // Name column
            if (td) {
                let txtValue = td.textContent || td.innerText;
                if (txtValue.toLowerCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }       
        }
    }
</script>

</body>
</html>