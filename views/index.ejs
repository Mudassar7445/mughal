<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard | Mughal Molding Center</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body { background: #f0f2f5; font-family: 'Segoe UI', sans-serif; }
        .sidebar { width: 260px; height: 100vh; background: #1e293b; color: white; position: fixed; }
        .main { margin-left: 260px; padding: 30px; }
        .nav-link { color: #94a3b8; padding: 12px 20px; border-radius: 8px; margin: 5px 15px; display: block; text-decoration: none; }
        .nav-link:hover, .nav-link.active { background: #334155; color: white; }
        .stat-card { border: none; border-radius: 15px; background: white; box-shadow: 0 4px 6px rgba(0,0,0,0.05); }
    </style>
</head>
<body>

<div class="sidebar">
    <div class="p-4 mb-3 text-center border-bottom border-secondary">
        <h4 class="fw-bold text-white mb-0">Mughal Molding</h4>
        <small class="text-muted">Admin Panel</small>
    </div>
    <nav class="nav flex-column">
        <a href="/" class="nav-link active"><i class="bi bi-grid-fill me-2"></i> Dashboard</a>
        <a href="/billing" class="nav-link"><i class="bi bi-receipt me-2"></i> New Billing</a>
        <a href="/bill_history" class="nav-link"><i class="bi bi-clock-history me-2"></i> Bill History</a>
        <a href="/customer_khata" class="nav-link text-warning fw-bold"><i class="bi bi-journal-text me-2"></i> Detailed Khata</a>
        <a href="/inventory" class="nav-link"><i class="bi bi-box-seam me-2"></i> Stock Control</a>
        <a href="/customers" class="nav-link"><i class="bi bi-person-rolodex me-2"></i> Khata Register</a>
        <hr class="mx-3 border-secondary">
        <a href="/logout" class="nav-link text-danger"><i class="bi bi-box-arrow-right me-2"></i> Logout</a>
    </nav>
</div>

<div class="main">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Business Overview</h2>
        <div class="text-muted"><%= date %></div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card stat-card p-4 border-start border-primary border-5">
                <small class="text-muted fw-bold">DAILY SALE (TODAY)</small>
                <h3 class="fw-bold mb-0">Rs. <%= Number(daily_sale).toLocaleString() %></h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card p-4 border-start border-success border-5">
                <small class="text-muted fw-bold">MONTHLY SALE</small>
                <h3 class="fw-bold mb-0">Rs. <%= Number(monthly_sale).toLocaleString() %></h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card p-4 border-start border-danger border-5">
                <small class="text-muted fw-bold">TOTAL UDHAAR (DETAILED)</small>
                <h3 class="fw-bold mb-0 text-danger">Rs. <%= Number(total_udhaar).toLocaleString() %></h3>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card p-3 shadow-sm h-100">
                <h5 class="fw-bold mb-3"><i class="bi bi-receipt me-2 text-primary"></i> Recent Bills</h5>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead><tr class="small text-muted"><th>Bill #</th><th>Customer</th><th>Total</th><th>Status</th></tr></thead>
                        <tbody>
                            <% recent_bills.forEach(bill => { %>
                                <tr>
                                    <td>#<%= bill.id %></td>
                                    <td class="fw-bold"><%= bill.customer_name %></td>
                                    <td><%= Number(bill.total_amount).toLocaleString() %></td>
                                    <td>
                                        <span class="badge <%= bill.remaining_balance > 0 ? 'bg-danger-subtle text-danger' : 'bg-success-subtle text-success' %>">
                                            <%= bill.remaining_balance > 0 ? 'Pending' : 'Paid' %>
                                        </span>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-3 shadow-sm h-100">
                <h5 class="fw-bold mb-3"><i class="bi bi-journal-text me-2 text-warning"></i> Recent Khata Entries</h5>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead><tr class="small text-muted"><th>Customer</th><th>Balance</th><th>Date</th></tr></thead>
                        <tbody>
                            <% recent_khata.forEach(entry => { %>
                                <tr>
                                    <td class="fw-bold"><%= entry.customer_name %></td>
                                    <td class="text-danger fw-bold"><%= Number(entry.balance_amount).toLocaleString() %></td>
                                    <td><%= entry.entry_date %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>